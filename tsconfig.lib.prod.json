/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "declarationMap": false,
    "paths": {
      "ngx-bit": [
        "dist/ngx-bit",
        "dist/ngx-bit/*"
      ],
      "ngx-bit/component": [
        "dist/ngx-bit/component",
        "dist/ngx-bit/component/*"
      ],
      "ngx-bit/directive": [
        "dist/ngx-bit/directive",
        "dist/ngx-bit/directive/*"
      ],
      "ngx-bit/factory": [
        "dist/ngx-bit/factory",
        "dist/ngx-bit/factory/*"
      ],
      "ngx-bit/operates": [
        "dist/ngx-bit/operates",
        "dist/ngx-bit/operates/*"
      ],
      "ngx-bit/pipe": [
        "dist/ngx-bit/pipe",
        "dist/ngx-bit/pipe/*"
      ],
      "ngx-bit/types": [
        "dist/ngx-bit/types",
        "dist/ngx-bit/types/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
